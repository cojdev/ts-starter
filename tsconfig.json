{
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "module": "es6",
    "target": "es5",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "lib": [
      "dom", "es2015"
    ],
  },
  "exclude": [
    "node_modules",
    "dist",
    "webpack.config.js"
  ],
}